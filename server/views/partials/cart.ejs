
    <main class="container">
        <section class="cart py-16">
            <% if(session.cart) {%>
            <div class="order container mx-auto w-1/2">
                <div class="flex items-center border-b border-gray-300 pb-4">
                    <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
                </div>
                <div class="product-list">
                    <% for(let product of Object.values(session.cart.items)) {%>
                    <div class="flex cart-item items-center">
                        <img class="w-24" src="<%= product.item.image %>" alt="" width = "150" height = "150">
                        <div class="flex-1 ml-4 ">
                            <h1><%= product.item.name %></h1>
                            <span><%= product.item.size %></span>
                        </div>
                        <span class="flex-1">Quantity: <%= product.qty %></span>
                        <span class="font-bold text-lg">price: $<%= product.item.price * product.qty %></span>
                    </div>
                    <% } %>
                </div>
                <div class="text-right total py-4">
                    <span class="text-lg font-bold">Total amount: </span>
                    <span class="amount text-2xl font-bold">$<%= session.cart.totalPrice %></span>
                </div>
            </div>
            <% } else { %>
            <div class="empty-card py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart empty ðŸ˜Œ</h1>
                    <p class="text-gray-500 text-lg mb-12">You probably haven't ordered anything yet. <br>
                        To order something, go to the main page.
                    </p>
                    <a href="/home" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
                </div>
            </div>
            <% } %>
        </section>
    </main>
